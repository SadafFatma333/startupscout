#!/bin/bash
# .vercelignore - Custom ignore logic for Vercel

# Check if this is a UI-only change
if git diff --quiet HEAD^ HEAD -- app/ utils/ config/ requirements.txt railway.toml; then
    echo "✅ UI changes detected - proceeding with Vercel deployment"
    exit 0
else
    echo "❌ Backend changes detected - skipping Vercel deployment"
    exit 1
fi
